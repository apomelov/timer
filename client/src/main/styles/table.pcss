div.application {
    display: flex;
    justify-content: space-around;
    height: 100%;
}

div.application-panel {
    height: 100%;
    display: flex;
    flex-flow: column;
    width: 800px;
    max-width: 800px;

    > div.panel {
        height: 100%;
        display: flex;
        flex-flow: column;

        flex-shrink: 1;
        flex-basis: 0;

        > div.panel-heading {
            flex-grow: 0;
            flex-shrink: 1;
            flex-basis: auto;

            display: flex;
            align-items: center;
        }

        > div.panel-body {
            padding: 0;

            flex-grow: 1;
            flex-shrink: 1;
            flex-basis: 0;

            overflow-y: scroll;

            > div.panel-row {
                display: flex;
                border-top: solid 1px #ddd;

                &:first-child {
                  border-bottom: solid 1px #ddd;
                  font-weight: bold;
                  position: sticky;
                  top: 0;
                }
                &:nth-child(even) { background-color: #fff; }
                &:nth-child(odd) { background-color: #f9f9f9; }
                &:hover:not(:first-child) { background-color: #f3f3f3; }

                &.active { background-color: #dfd !important; }
                &.closed { text-decoration: line-through black solid; }

                > div {
                    padding: 10px;
                    flex-shrink: 0;
                    flex-basis: 0;
                    white-space: nowrap;
                    overflow: hidden;
                }
            }

        }

        &.task-panel {
            flex-grow: 6;
            > div.panel-heading {
                padding-top: 5px;
                padding-bottom: 5px;
                justify-content: space-between;
                > div.controls {
                    display: flex;
                    > button {
                        margin: 0 5px;
                        padding-bottom: 3px;
                    }
                }
            }

            > div.panel-body > div.panel-row {
                &.aimed {
                    background-color: #ffd;
                }
                > div {
                    &:nth-child(1) { flex-grow: 5; }
                    &:last-child {
                        flex-grow: 5;
                        display: flex;
                        > div {
                            flex-grow: 1;
                            flex-shrink: 0;
                            flex-basis: 0;
                            overflow: hidden;
                            margin-right: 10px;
                            &:last-child {
                                margin-right: 0;
                            }
                        }
                    }
                }
            }

        }

        &.intervals-panel {
            flex-grow: 4;
            > div.panel-body > div.panel-row {
                > div {
                    &:nth-child(1) { flex-grow: 5; }
                    &:nth-child(2) { flex-grow: 1; }
                    &:last-child { flex-grow: 4; }
                }
                .dragging {
                    color: #ccc;
                }
            }
        }

    }
}
